<h2> Products in the market </h2>

<div id="highChartContainer" style="width: 400px; height: 400px; margin: 0 auto"></div>

<table>
  <tbody>
    <tr>
      <th>ID</th>
      <th>Item</th>
      <th>Cost</th>
      <th>Seller</th>
    </tr>

    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
      	<td><%= product.name %></td>
      	<td>$<%= product.price %></td>
      	<td><%= product.user.name if product.user.present? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type='text/javascript'>
  $(document).ready(function(){
    chart = new Highcharts.Chart({
      chart: {
          renderTo: 'highChartContainer',
          plotBackgroundColor: null,
          plotBorderWidth: null,
          plotShadow: false,
          type: 'pie'
      },
      title: {
          text: 'Browser market shares at a specific website, 2010'
      },
      series: [{
          name: 'Browser share',
          data: [
              ['Firefox',   45.0],
              ['IE',       26.8],
              ['Chrome',   12.8],
              ['Safari',    8.5],
              ['Opera',     6.2],
              ['Others',   0.7]
          ]
      }]
    });
  });
</script>
